@model IEnumerable<WebApplicationTeste.Models.CategoriaData>

@{
    ViewData["Title"] = "Index";
}

<h2>Categorias</h2>

<p>
    <a asp-action="Create">+ Nova Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCriacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.IdCategoria }) |
                @Html.ActionLink("Detalhes", "Details", new { id=item.IdCategoria }) |
                @Html.ActionLink("Excluir", "Delete", new { id=item.IdCategoria })
            </td>
        </tr>
}
    </tbody>
</table>
